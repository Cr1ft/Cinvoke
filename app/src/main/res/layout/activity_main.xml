<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hook_status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info"
            android:textAllCaps="false"
            android:textColor="#449322"
            android:textSize="18sp"
            android:textStyle="bold" />
<!--        边界-->
        <TextView
            android:id="@+id/br_tv"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0B0A0A" />
        <TextView
            android:id="@+id/hook_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inline Hook"
            android:textAllCaps="false"
            android:textColor="#0B0E0A"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/inline_hook_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/select_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select App" />

            <Switch
                android:id="@+id/inlinehook_start_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="START HOOK :  "
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="italic" />
        </LinearLayout>
        <TextView
            android:id="@+id/br_tv2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0B0A0A" />
        <TextView
            android:id="@+id/newphone_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启一键新机"
            android:textAllCaps="false"
            android:textColor="#0B0E0A"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/select_newphone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/select_newphone_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select App" />

            <Switch
                android:id="@+id/select_newphone_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="开启一键新机 :  "
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/br_tv3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0B0A0A" />
        <TextView
            android:id="@+id/frida_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FRIDA-GADGET注入"
            android:textAllCaps="false"
            android:textColor="#0B0E0A"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/select_frida_target_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select App" />

            <RadioGroup
                android:id="@+id/select_frida_mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/select_frida_mod_listen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="listen"/>
                <RadioButton
                    android:id="@+id/select_frida_mod_script"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="script"/>
            </RadioGroup>



        <LinearLayout
            android:id="@+id/frida_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



        </LinearLayout>




    </LinearLayout>
</ScrollView>